# =============================================================================
# Brand Infinity Engine - Environment Configuration Template
# =============================================================================
# Copy this file to .env and fill in your actual credentials
# NEVER commit the .env file to version control
# =============================================================================

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
DATABASE_URL=postgresql://postgres:your_password@localhost:5432/brand_infinity
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=brand_infinity
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here

# -----------------------------------------------------------------------------
# Vector Database (Pinecone OR Supabase Vector)
# -----------------------------------------------------------------------------
# Option 1: Pinecone
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=us-east-1
PINECONE_INDEX_NAME=brand-guidelines

# Option 2: Supabase Vector (uncomment if using Supabase)
# SUPABASE_URL=https://your-project.supabase.co
# SUPABASE_ANON_KEY=your_supabase_anon_key_here
# SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# -----------------------------------------------------------------------------
# Redis Cache Configuration
# -----------------------------------------------------------------------------
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# -----------------------------------------------------------------------------
# Object Storage (AWS S3 OR Google Drive)
# -----------------------------------------------------------------------------
# Option 1: AWS S3
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_REGION=us-east-1
S3_BUCKET_NAME=brand-infinity-assets
S3_BUCKET_REGION=us-east-1

# Option 2: Google Drive (uncomment if using Google Drive)
# GOOGLE_CLIENT_ID=your_google_client_id_here
# GOOGLE_CLIENT_SECRET=your_google_client_secret_here
# GOOGLE_REFRESH_TOKEN=your_google_refresh_token_here
# GOOGLE_DRIVE_FOLDER_ID=your_drive_folder_id_here

# CDN Configuration
CDN_URL=https://cdn.yourdomain.com

# -----------------------------------------------------------------------------
# AI Model API Keys
# -----------------------------------------------------------------------------
# OpenAI (GPT-4o, GPT-4o-mini)
OPENAI_API_KEY=sk-your_openai_api_key_here
OPENAI_ORG_ID=org-your_org_id_optional

# Anthropic (Claude 3.5 Sonnet)
ANTHROPIC_API_KEY=sk-ant-your_anthropic_key_here

# DeepSeek (V3, R1 Reasoner)
DEEPSEEK_API_KEY=your_deepseek_api_key_here
DEEPSEEK_BASE_URL=https://api.deepseek.com

# Sora (Video Generation)
SORA_API_KEY=your_sora_api_key_here
SORA_BASE_URL=https://api.sora.com

# Veo3 (Video Generation)
VEO3_API_KEY=your_veo3_api_key_here
VEO3_BASE_URL=https://api.veo3.com

# Seedream (Video Generation)
SEEDREAM_API_KEY=your_seedream_api_key_here
SEEDREAM_BASE_URL=https://api.seedream.com

# Nano B (Image-to-Video)
NANO_B_API_KEY=your_nano_b_api_key_here
NANO_B_BASE_URL=https://api.nanob.com

# ElevenLabs (Text-to-Speech)
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
ELEVENLABS_VOICE_ID=default_voice_id

# -----------------------------------------------------------------------------
# Social Media Platform APIs
# -----------------------------------------------------------------------------
# Instagram Graph API
INSTAGRAM_ACCESS_TOKEN=your_instagram_access_token_here
INSTAGRAM_BUSINESS_ACCOUNT_ID=your_instagram_business_id_here

# TikTok API
TIKTOK_ACCESS_TOKEN=your_tiktok_access_token_here
TIKTOK_CLIENT_KEY=your_tiktok_client_key_here
TIKTOK_CLIENT_SECRET=your_tiktok_client_secret_here

# YouTube Data API
YOUTUBE_API_KEY=your_youtube_api_key_here
YOUTUBE_CLIENT_ID=your_youtube_client_id_here
YOUTUBE_CLIENT_SECRET=your_youtube_client_secret_here
YOUTUBE_REFRESH_TOKEN=your_youtube_refresh_token_here

# LinkedIn API
LINKEDIN_ACCESS_TOKEN=your_linkedin_access_token_here
LINKEDIN_CLIENT_ID=your_linkedin_client_id_here
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret_here

# Blotato (Social Media Automation)
BLOTATO_API_KEY=your_blotato_api_key_here
BLOTATO_BASE_URL=https://api.blotato.com

# -----------------------------------------------------------------------------
# n8n Configuration
# -----------------------------------------------------------------------------
N8N_HOST=localhost
N8N_PORT=5678
N8N_PROTOCOL=https
N8N_WEBHOOK_URL=https://your-n8n-instance.com
N8N_API_KEY=your_n8n_api_key_here
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=your_n8n_password_here
N8N_ENCRYPTION_KEY=your_n8n_encryption_key_here

# n8n Database (if using external Postgres)
N8N_DATABASE_TYPE=postgresdb
N8N_DATABASE_POSTGRESDB_HOST=postgres
N8N_DATABASE_POSTGRESDB_PORT=5432
N8N_DATABASE_POSTGRESDB_DATABASE=n8n
N8N_DATABASE_POSTGRESDB_USER=postgres
N8N_DATABASE_POSTGRESDB_PASSWORD=your_password_here

# -----------------------------------------------------------------------------
# Application Configuration
# -----------------------------------------------------------------------------
NODE_ENV=development
PORT=3000
LOG_LEVEL=debug
APP_NAME=brand-infinity-engine
APP_VERSION=1.0.0

# -----------------------------------------------------------------------------
# Security & Authentication
# -----------------------------------------------------------------------------
JWT_SECRET=your_jwt_secret_key_at_least_32_characters_long
JWT_EXPIRES_IN=24h
ENCRYPTION_KEY=your_encryption_key_at_least_32_characters_long
API_RATE_LIMIT=100
API_RATE_LIMIT_WINDOW=15m

# -----------------------------------------------------------------------------
# Monitoring & Observability
# -----------------------------------------------------------------------------
# Optional: Application Performance Monitoring
# SENTRY_DSN=your_sentry_dsn_here
# NEW_RELIC_LICENSE_KEY=your_new_relic_key_here

# Optional: Logging Service
# LOGTAIL_SOURCE_TOKEN=your_logtail_token_here

# -----------------------------------------------------------------------------
# Feature Flags & Optimization
# -----------------------------------------------------------------------------
ENABLE_BRAND_CACHE=true
BRAND_CACHE_TTL=3600
ENABLE_SCENE_CACHE=true
SCENE_CACHE_TTL=2592000
ENABLE_COST_TRACKING=true
ENABLE_QUALITY_SCORING=true
MAX_CONCURRENT_JOBS=10
MAX_RETRY_ATTEMPTS=3
RETRY_BACKOFF_MS=1000

# -----------------------------------------------------------------------------
# Cost & Budget Management
# -----------------------------------------------------------------------------
DEFAULT_CAMPAIGN_BUDGET_USD=1000
COST_ALERT_THRESHOLD_PERCENT=75
ENABLE_BUDGET_ALERTS=true

# -----------------------------------------------------------------------------
# Quality Thresholds
# -----------------------------------------------------------------------------
MIN_BRAND_ALIGNMENT_SCORE=0.85
MIN_HOOK_QUALITY_SCORE=0.75
MIN_SCRIPT_COMPLIANCE_SCORE=0.90
MIN_VIDEO_QUALITY_SCORE=0.80

