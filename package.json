{
  "name": "brand-infinity-engine",
  "version": "1.0.0",
  "description": "AI-powered marketing content pipeline - Transform text to cinematic video campaigns",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "setup": "bash scripts/setup/install_dependencies.sh",
    "setup:db": "bash scripts/setup/setup_postgres.sh",
    "setup:vector": "bash scripts/setup/setup_vector_db.sh",
    "setup:redis": "bash scripts/setup/setup_redis.sh",
    "setup:storage": "bash scripts/setup/setup_storage.sh",
    "setup:all": "npm run setup && npm run setup:db && npm run setup:vector && npm run setup:redis && npm run setup:storage",
    "db:migrate": "bash scripts/migrations/run_migrations.sh",
    "db:rollback": "bash scripts/migrations/rollback_migrations.sh",
    "db:seed": "bash scripts/seed/seed_database.sh",
    "db:reset": "npm run db:rollback && npm run db:migrate && npm run db:seed",
    "deploy:workflows": "bash scripts/deploy/deploy_n8n_workflows.sh",
    "deploy:export": "bash scripts/deploy/export_workflows.sh",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:restart": "docker-compose restart",
    "docker:clean": "docker-compose down -v",
    "test": "NODE_ENV=test jest",
    "test:unit": "NODE_ENV=test jest --testPathPattern=tests/unit",
    "test:integration": "NODE_ENV=test jest --testPathPattern=tests/integration",
    "test:watch": "NODE_ENV=test jest --watch",
    "test:coverage": "NODE_ENV=test jest --coverage",
    "start": "node index.js",
    "dev:backend": "PORT=3001 nodemon index.js",
    "dev:frontend": "cd frontend && npm run dev",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\" --names \"BACKEND,FRONTEND\" --prefix-colors \"blue,magenta\"",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "check": "npm run lint && npm run test",
    "validate:env": "node scripts/setup/validate_env.js"
  },
  "keywords": [
    "ai",
    "video-generation",
    "marketing",
    "automation",
    "n8n",
    "sora",
    "veo3",
    "deepseek",
    "brand-automation"
  ],
  "author": "Brand Infinity Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.10.2",
    "@aws-sdk/client-s3": "^3.490.0",
    "@aws-sdk/s3-request-presigner": "^3.490.0",
    "@supabase/supabase-js": "^2.39.0",
    "aws-sdk": "^2.1540.0",
    "axios": "^1.6.5",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "date-fns": "^3.0.6",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "fluent-ffmpeg": "^2.1.2",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "openai": "^4.24.1",
    "p-queue": "^8.0.1",
    "p-retry": "^6.2.0",
    "pg": "^8.11.3",
    "pg-format": "^1.0.4",
    "redis": "^4.6.12",
    "sharp": "^0.33.1",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.3.1",
    "@types/jest": "^29.5.11",
    "concurrently": "^9.2.1",
    "eslint": "^8.56.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.1",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "utils/**/*.js",
      "!utils/**/*.test.js",
      "!**/node_modules/**"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "setupFiles": [
      "<rootDir>/tests/setup.js"
    ]
  }
}
